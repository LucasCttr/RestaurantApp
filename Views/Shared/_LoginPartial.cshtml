@using Microsoft.AspNetCore.Identity
@using RestaurantApp.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    <li class="nav-item d-flex align-items-center">
        @{
            int cartCount = 0;
            if (Context.Session.Get<OrderViewModel>("OrderViewModel") != null)
            {
                OrderViewModel order = Context.Session.Get<OrderViewModel>("OrderViewModel")!;
                cartCount = order.OrderItems.Sum(product => product.Quantity);
            }
        }
        <a class="nav-link text-dark position-relative me-3" asp-controller="Order" asp-action="Cart">
            <i class="bi bi-cart"></i>
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-success">
                @cartCount
                <span class="visually-hidden">Cart Quantity</span>
            </span>
        </a>
    </li>
    @if (SignInManager.IsSignedIn(User))
    {

        <li class="nav-item d-flex align-items-center">
            <a class="nav-link text-dark" asp-controller="Order" asp-action="ViewOrders">My Orders</a>
        </li>
        <li class="nav-item d-flex align-items-center">
            <a asp-area="Identity" asp-page="/Account/Manage/Index" class="nav-link text-dark me-2">Hola, @User.Identity!.Name</a>
        </li>
        <li class="nav-item d-flex align-items-center">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Registrarse</a>
        </li>
    }
</ul>