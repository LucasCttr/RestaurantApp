@model IEnumerable<Product>
@{
    ViewBag.Title = $"Menu Items";
}

@functions {
    private string GetDeleteModalId(Product prod)
    {
        return $"#deleteModal" + prod.ProductId;
    }

    private string GetModalId(Product prod)
    {
        return $"deleteModal" + prod.ProductId;
    }
}
<h1>Menu Items</h1>
<a asp-action="AddEdit" class="btn btn-primary">Create New Menu Item</a>

<div class="row g-4">
    @foreach (Product pi in Model)
    {
        <div class="col-md-3">
            <form asp-action="delete" asp-controller="product" method="post">
                <input type="hidden" name="id" value="@pi.ProductId" />
                <div class="card" style="width: 18rem;">
                    <img src="@Url.Content($"~/images/" + pi?.ImageUrl)" class="card-img-top fixed-image-height"
                         alt="@pi.Description" />
                    <div class="card-body">
                        <h5 class="card-title">@pi.Name</h5>
                        <p class="card-text">@pi.Description</p>
                        <p class="card-text">@pi.Price.ToString("C")</p>
                        <p class="card-text">Quantity In Stock: @pi.Stock</p>
                        <a class="btn btn-info" asp-controller="Product" asp-action="AddEdit"
                           asp-route-id="@pi.ProductId"><i class="bi bi-pencil-fill"> Edit</i> </a>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                                data-bs-target="@GetDeleteModalId(pi)">
                            <i class="bi bi-trash-fill"> Delete</i>
                        </button>
                        <div class="modal fade" id="@GetModalId(pi)" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title fs-5">Confirm Deletion</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Are you sure you want to delete @pi.Name?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel
                                        </button>
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    }